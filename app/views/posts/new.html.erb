<h1>Add Disaster Information's</h1>
<% if @post.errors.any? %>
  <ul>
    <% @post.errors.each do |error| %>
      <ol class><%= error.full_message %></ol>
    <% end %>
  </ul>
<% end %>
<%= form_with model: @post do |form| %>
  <div>
    <%= form.label :title %><br>
    <%= form.text_field :title %>
  </div>
  <div>
    <%= form.label :content %><br>
    <%= form.text_field :content %>
  </div>
  <div>
    <%= form.label :address %><br>
    <%= form.text_area :address, rows: 4%>
  </div>
  <div>
    <%= form.collection_check_boxes :type_ids, Type.all, :id, :name %>
  </div>
<%= form.submit %>
<% end %>
<%= link_to 'Back', posts_path%>
